<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start|center_vertical"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/mountain_track_list_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Marcaj"
            android:src="@drawable/banda_rosie"
            android:layout_centerVertical="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp">
        </ImageView>

        <TextView
            android:id="@+id/mountain_track_list_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft = "5dp"
            android:textSize="22sp"
            android:text="@string/sample_text"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/mountain_track_list_diff_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mountain_track_list_text"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:text="Dificultate:"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/mountain_track_list_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mountain_track_list_text"
            android:layout_toRightOf="@+id/mountain_track_list_diff_label"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="@string/sample_text">
        </TextView>

        <TextView
            android:id="@+id/mountain_track_list_length_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mountain_track_list_diff_label"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"
            android:text="Durata:"
            android:textSize="18sp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/mountain_track_list_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mountain_track_list_diff"
            android:layout_toRightOf="@+id/mountain_track_list_length_label"
            android:text="@string/sample_text"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#ffffff" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="40">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imageView1"
                android:contentDescription="@string/line_content_description"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/linie"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="40">
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>