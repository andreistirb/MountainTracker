<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mytrackdetails_duration_text"
            android:text="Durata:"
            style="@style/mytrackdetails_detail"/>

        <TextView
            android:id="@+id/mytrackdetails_duration"
            android:text="@string/sample_text"
            style="@style/mytrackdetails_detail"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/mytrackdetails_distance_text"
            android:text="Distanta parcursa(km):"
            style="@style/mytrackdetails_detail"/>
        
        <TextView
            android:id="@+id/mytrackdetails_distance"
            android:text="@string/sample_text"
            style="@style/mytrackdetails_detail"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/mytrackdetails_avg_speed_text"
            android:text="Viteza medie(km/h):"
            style="@style/mytrackdetails_detail"/>
        
        <TextView
            android:id="@+id/mytrackdetails_avg_speed"
            android:text="@string/sample_text"
            style="@style/mytrackdetails_detail"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/mytrackdetails_max_speed_text"
            android:text="Viteza maxima(km/h):"
            style="@style/mytrackdetails_detail"/>
        
        <TextView
            android:id="@+id/mytrackdetails_max_speed"
            android:text="@string/sample_text"
            style="@style/mytrackdetails_detail"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/mytrackdetails_min_alt_text"
            android:text="Altitudine minima(m):"
            style="@style/mytrackdetails_detail"/>
        
        <TextView
            android:id="@+id/mytrackdetails_min_alt"
            android:text="@string/sample_text"
            style="@style/mytrackdetails_detail"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/mytrackdetails_max_alt_text"
            android:text="Altitudine maxima(m):"
            style="@style/mytrackdetails_detail"/>
        
        <TextView
            android:id="@+id/mytrackdetails_max_alt"
            android:text="@string/sample_text"
            style="@style/mytrackdetails_detail"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/mytrackdetails_harta"
            android:text="Harta"
            style="@style/text_buton"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/mytrackdetails_export"
            style="@style/text_buton"
            android:text="Exporta ca GPX"
            android:layout_alignTop="@+id/mytrackdetails_harta"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp" />

    </RelativeLayout>



</LinearLayout>