            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="40">
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
