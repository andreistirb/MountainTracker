                android:id="@+id/track_details_availability"
                style="@style/Details">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="fill_parent"
