<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c5da9"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/track_details_duration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_duration_label"
            style="@style/Details"
            android:text="@string/track_details_duration" >
        </TextView>

        <TextView
            android:id="@+id/track_details_duration"
            style="@style/Details"
            android:layout_toRightOf="@+id/track_details_duration_label" >
        </TextView>

        <ImageView
            android:id="@+id/track_details_duration_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/track_details_duration"
            android:background="@drawable/linie"
            android:contentDescription="linie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_difficulty_label"
            style="@style/Details"
            android:text="@string/track_details_difficulty" >
        </TextView>

        <TextView
            android:id="@+id/track_details_difficulty"
            style="@style/Details"
            android:layout_toRightOf="@+id/track_details_difficulty_label" >
        </TextView>

        <ImageView
            android:id="@+id/track_details_difficulty_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/track_details_difficulty"
            android:background="@drawable/linie"
            android:contentDescription="linie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_mark_label"
            style="@style/Details"
            android:text="@string/track_details_mark" >
        </TextView>

        <TextView
            android:id="@+id/track_details_mark"
            style="@style/Details" 
            android:layout_toRightOf="@+id/track_details_mark_label">
        </TextView>

        <ImageView
            android:id="@+id/track_details_mark_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/track_details_mark"
            android:background="@drawable/linie"
            android:contentDescription="linie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_availability_label"
            style="@style/Details"
            android:text="@string/track_details_availability" >
        </TextView>

        <TextView
            android:id="@+id/track_details_availability"
            style="@style/Details" 
            android:layout_toRightOf="@+id/track_details_availability_label">
        </TextView>

        <ImageView
            android:id="@+id/track_details_availability_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/track_details_availability"
            android:background="@drawable/linie"
            android:contentDescription="linie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_min_alt_label"
            style="@style/Details"
            android:text="@string/track_details_min_alt" >
        </TextView>

        <TextView
            android:id="@+id/track_details_min_alt"
            style="@style/Details" 
            android:layout_toRightOf="@+id/track_details_min_alt_label">
        </TextView>
        
        <ImageView
            android:id="@+id/track_details_min_alt_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/track_details_min_alt"
            android:background="@drawable/linie"
            android:contentDescription="linie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_max_alt_label"
            style="@style/Details"
            android:text="@string/track_details_max_alt" >
        </TextView>

        <TextView
            android:id="@+id/track_details_max_alt"
            style="@style/Details"
            android:layout_toRightOf="@+id/track_details_max_alt_label" >
        </TextView>
        
        <ImageView
            android:id="@+id/track_details_max_alt_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/track_details_max_alt"
            android:background="@drawable/linie"
            android:contentDescription="linie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_description_label"
            style="@style/Details"
            android:text="@string/track_details_description" >
        </TextView>

        <TextView
            android:id="@+id/track_details_description"
            style="@style/Details"
            android:layout_toRightOf="@+id/track_details_description_label" >
        </TextView>
    </RelativeLayout>

</LinearLayout>