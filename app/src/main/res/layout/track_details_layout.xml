    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/track_details_description_label"
            style="@style/Details"
            android:text="@string/track_details_description" >
        </TextView>

        <TextView
            android:id="@+id/track_details_description"
            style="@style/Details">
        </TextView>
    </LinearLayout>

</LinearLayout>